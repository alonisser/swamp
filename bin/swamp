#!/usr/bin/env node

var program = require('commander'),
    cmd     = require('./cmd');

program
    .version(require('../package.json').version)
    .option('-c, --create', 'creates a bootstrap `Swampfile.js` in the cwd', cmd.create)
    .option('-r, --run', 'run the swamp with the cwd `Swampfile.js`', cmd.run)
    .option('-d, --daemon', 'start the swamp as a daemon with the cwd `Swampfile.js`', cmd.daemon)
    .option('-k, --kill', 'stop the current running swamp (started by `--run` or `--daemon`)', cmd.kill)
    .option('-s, --status', 'see the swamp status', cmd.status)
    .parse(process.argv);